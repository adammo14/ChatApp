<body>

  <section id="sideMenu">

    <div class="navbar-left logo">
      <a href="/">
        <img src="/images/logoV2.png">
      </a>
    </div>

    <nav id="dash-nav">
      {{#compare user.gender "==" "male"}}
        <img src="/images/avatar-man.png" class="avatar">
      {{/compare}}

      {{#compare user.gender "==" "female"}}
        <img src="/images/avatar-woman.png" class="avatar">
      {{/compare}}

      <h4 class="text-center greeting">Hello {{user.username}}!</h4>

      <a href="/dashboard/{{user.id}}"><i class="fa fa-user"></i> Personal Information</a>
      <a href="/dashboard2/{{user.id}}"><i class="fa fa-puzzle-piece"></i> Matching Preferences</a>
      <a href="/dashboard3/{{user.id}}" class="active"><i class="fa fa-wrench"></i> Website Settings</a>
    </nav>
  </section>

  <header>
    <div class="user-area">
      <a type="button" data-toggle="modal" data-target=".bd-example-modal-sm" href="#" class="notification"><i class="fa fa-bell"></i><span class="circle">1</span></a>
      <a href="/" class="close-btn"><i class="fa fa-window-close"></i></a>
    </div>
  </header>

  <section id="content-area">
    <div class="heading">
      <h1>Dashboard</h1>
      <p>Welcome to Personality Chat dashboard</p>
    </div>

    <div class="card">
      <div class="">
        <form role="form" method="POST" action="/dashboard3/{{user._id}}">

          <p class="tool-tip">Personality theme <i class="fa fa-info-circle"></i>
            <span class="tool-tip-text">This feature uses your matching preferences to customise website interface colours</span>
          </p>
          <!-- Personality theme switch -->
          <label class="switch">
            <input type="checkbox" value="true" name="switch">
            <span class="slider round"></span>
          </label>

          <!-- Default themes -->
          <!--<p class="control-label">Choose default themes</p>
            <a class="theme-btn" onclick="changeStylesheet('/css/blue.css')">New Theme</a>
            <a class="theme-btn" onclick="changeStylesheet('/css/style.css')">Default</a>-->

            <div class="dash-btn">
              <button type="submit" class="btn btn-success">APPLY CHANGES</button>
            </div>
          </div>


        </form>
      </div>
    </div>
  </section>

  <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" style="position:absolute; top:60px; right:10px;">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center" id="exampleModalLabel">You have a new match!</h5>
          <div class="open-chat">
            <button href="#" type="button" class="btn btn-success">Open Chat</button>
          </div>
        </div>
      </div>
    </div>
  </div>



