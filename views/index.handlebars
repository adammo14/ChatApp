              {{/if}}
            </ul>
          </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
  </nav>
  <div class="main-wrapper">
  {{#if user}}

    <div class="container">
      <div class="col-md-10">
        <div class="chat-canvas" id="chat-canvas"><!-- grey background of the chat container -->
          <ul class="chat-msg">
            <li class="them" style="width:calc(100% - 40px);list-style-type:none;float:left;margin-top:10px;">
              <div class="macro">
                <div class="text text-r">
                  <h4>
                    You've been matched with: <strong>{{user.nameMatch}}</strong>
                      <ol>Personality: <strong>{{user.personalityMatch}}</strong></ol>
                      <ol>Personality traits: <strong>{{user.personalityMatchTraits}}</strong></ol>
                      <ol>Favourite color: <strong>{{user.colorMatch}}</strong></ol>
                      <ol>Match closeness: Your score:&nbsp;<strong>{{user.personalityVal}}</strong>&nbsp;{{user.nameMatch}} score:&nbsp;<strong>{{user.personalityMatchVal}}</strong></ol>
                  </h4>

                </div>
              </div>
            </li>
          </ul><!-- Are where chat messages pop up -->


          <div class="text-box">
            <input class="mytext" placeholder="Type a message"/>
            <button id="btn" name="btn" class="btn btn-primary">Send</button>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <div class="rating">
          <!-- Thumbs up -->
          <div class="like grow">
            <i class="fa fa-thumbs-up fa-3x like" aria-hidden="true"></i>Commend
          </div>
          <hr class="rating-divider">
          <!-- Thumbs down -->
          <div class="dislike grow">
            <i class="fa fa-thumbs-down fa-3x like" aria-hidden="true"></i>Report
          </div>
        </div>
      </div>
    </div>



  {{else}}

  <div class="main-content">
    <div class="container">
      <div class="row">


        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="title-image">
            <img src="images/01icon.gif">
          </div>
        </div>


        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="title-text text-center">
            <h1><strong>What is personality chat?</strong></h1>
            <p><strong>Personality chat</strong> is a chat room website which matches people based on selected key words and mood.</p>
          </div>
        </div>

        <div class="col-md-3 col-sm-12 col-xs-12">
          <div class="title-button">
            <button type="button" class="btn btn-success button-start">Start</button>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="steps text-center">
    <div class="container">
      <div class="col-md-12">
        <h2>Step 1:</h2>
        <p><a href='/registration'>Register</a></p>
        <h2>Step 2:</h2>
        <p><a href="/login">Log in to your account</a></p>
        <h2>Step 3:</h2>
        <p>Change matching preferences in your dashboard</p>
        <h2>Step 4:</h2>
        <p>Get matched up with a person who's personality resembles yours.</p>
        <button type="button" class="btn btn-success button-start">Start</button>
      </div>
    </div>
  </div>

  <div class="video">

    <div class="container">
      <p>PLACEHOLDER VIDEO</p>
      <div class="video-container">
        <iframe width="853" height="480" src="https://www.youtube.com/embed/z9Ul9ccDOqE" frameborder="0" allowfullscreen</iframe>
      </div>
    </div>
  </div>

  <div class="modal fade" id="login" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-6 col-md-offset-6">
                <button type="button" class="close" aria-label="Close" data-dismiss="modal">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-body">
          <div class="regbox">
            <form class="login" data-toggle="validator" role="form" method="POST">
              <div class="flash-msg-bad">
                <!-- Handlebars flash message -->
              </div>
              <div class="form-group">
                <label for="inputUsername" class="control-label col-sm-3">Username</label>
                <input type="text" class="form-control" name="username" placeholder="Username" required>
              </div>
              <div class="form-group">
                <label for="inputPassword" class="control-label col-sm-3" >Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password" required>
              </div>

              <div class="modal-footer">
                <button type="submit" class="btn btn-success">Log In</button>
              </div>

            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  {{/if}}
